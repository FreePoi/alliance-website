{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "types": [
      "node",
      "jest"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2017"
    ],
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "composite": true,
    "paths": {
      "@subql/common": [
        "packages/common/src"
      ],
      "@subql/common/*": [
        "packages/common/src/*"
      ],
      "@subql/types": [
        "packages/types/src"
      ],
      "@subql/types/*": [
        "packages/types/src/*"
      ],
      "@subql/validator": [
        "packages/validator/src"
      ],
      "@subql/validator/*": [
        "packages/validator/src/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules/**"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ]
}